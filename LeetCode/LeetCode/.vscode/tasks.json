{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile",
			"type": "process",
			"command": "${env:mingw}\\bin\\g++.exe",
			"args": [
				"-std=c++11",
				"-Wall",
				"-Wextra",
				"-pedantic",
				"-Wconversion",
				"-Wcast-align",
				"-Wformat-nonliteral",
				"-Wpointer-arith",
				"-Wshadow",
				"-Werror",
				"-g",
				"-o",
				"${fileBasenameNoExtension}.exe",
				"${fileBasename}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": "$gcc"
		}
	]
}
